@model GORDON_STORE_BETA.Areas.Seguranca.Models.LoginViewModel
@{
    Layout = "~/Views/Shared/_MenuAdmin.cshtml";
    ViewBag.Title = "Acessando o sistema";
}
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <main>
            <div class="formlogin">
                <div class="cabecalhologin">
                    <img src="~/Imagens/login-cabecalho.png" />

                </div>

                <div class="panel-body">
                    <div class="form-horizontal">
                        @if (ViewData.ModelState.Keys.Any(k => ViewData.ModelState[k].Errors.Count() > 0))
                        {
                            <div class="alert alert-danger alert-dismissable">
                                @Html.ValidationSummary(false,
                                "Verifique os seguintes erros:")

                            </div>
                        }
                        <div class="form-group">
                            <p>NOME</p>

                            <div class="">
                                @Html.EditorFor(model => model.UserName,
                                new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.UserName, "",
                                new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <p>SENHA </p>

                            <div class="senha">
                                @Html.PasswordFor(model => model.Senha, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Senha, "",
                                new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
                <div>
                    <div class="footerlogin">
                        <input type="submit" value="ACESSAR" class="btn btn-adicionar" />
                    </div>
                    <br />
                    <br />
                </div>
            </div>
        </main>
    }


