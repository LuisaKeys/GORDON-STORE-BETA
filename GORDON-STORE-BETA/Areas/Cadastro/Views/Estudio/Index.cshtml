@model IEnumerable<GORDON_STORE_BETA.Modelo.Cadastro.Estudio>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Listagem de Estúdios";
}

@if (@TempData["Message"] != null)
{
    <div class="alert" role="alert">
        @TempData["Message"]
    </div>
}
<main>
    <div class="panel tabelainteira">
        <div class="headertabela">
            RELAÇÃO DE ESTÚDIOS REGISTRADOS
        </div>
        <div class="itenstabela">
            <table class="table  table-hover">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.EstudioId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Nome)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.EstudioId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nome)
                            </td>
                            <td>
                                @Html.ActionLink("Alterar", "Edit", new { id = item.EstudioId }) |
                                @Html.ActionLink("Detalhes", "Details", new { id = item.EstudioId }) |
                                @Html.ActionLink("Eliminar", "Delete", new { id = item.EstudioId })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="panel-footer">
            @Html.ActionLink("REGISTRAR NOVO ESTÚDIO", "Create", null, new { @class = "btn btn-adicionar" })
        </div>
    </div>
</main>

@section styles{
    <link href="@Url.Content("~/content/DataTables/css/dataTables.bootstrap.css")" rel="stylesheet" />
}
@section ScriptPage{
    <script src="@Url.Content("~/scripts/DataTables/jquery.dataTables.js")"></script>
    <script src="@Url.Content("~/scripts/DataTables/dataTables.bootstrap.js")"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('.table').dataTable();
        });
    </script>
}
