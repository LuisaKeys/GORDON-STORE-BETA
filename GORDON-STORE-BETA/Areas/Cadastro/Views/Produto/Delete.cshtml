@model Modelo.Cadastro.Produto

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Visualizando detalhes do PRODUTO a ser removido";
}
<main>
    <div class="tabelainteira">
        <div class="headertabela">
            VISUALIZANDO DETALHES DO PRODUTO A SER REMOVIDO
        </div>
        <div class="panel-body">
            @Html.Partial("~/Areas/Cadastro/Views/Produto/_PartialDetailsContentPanel.cshtml", Model)
        </div>
        <div class="panel-footer panel-info">
            <a href="#" class="btn btn-retornar" data-toggle="modal"
               data-target="#deleteConfirmationModal">Remover</a>
            @Html.ActionLink("Retornar para a listagem", "Index", null, new { @class = "btn btn-retornar" })
        </div>
    </div>
</main>
<div class="modal fade" id="deleteConfirmationModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                    &times;
                </button>
                <h4 class="modal-title">
                    Confirmação de exclusão de PRODUTO
                </h4>
            </div>
            <div class="modal-body">
                <p>
                    Você está prestes a remover o produto @Model.Nome.ToUpper() do cadastro.
                </p>
                <p>
                    <strong>
                        Você está certo que deseja prosseguir?
                    </strong>
                </p>
                @using (Html.BeginForm("Delete", "Produto", FormMethod.Post,
                new { @id = "delete-form", role = "form" }))
                {
                    @Html.HiddenFor(m => m.ProdutoId)
                    @Html.AntiForgeryToken()
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" onclick="$('#delete-form').submit();">
                    Sim, exclua este produto.
                </button>
                <button type="button" class="btn btn-retornar" data-dismiss="modal">
                    Não, não exclua este produto.
                </button>
            </div>
        </div>
    </div>
</div>