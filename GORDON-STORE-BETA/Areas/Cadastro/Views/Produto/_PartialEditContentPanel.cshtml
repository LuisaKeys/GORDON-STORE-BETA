            @Html.EditorFor(model => model.DataCadastro, new
            {
                htmlAttributes =
            new { @class = "form-control" }
            })
            @Html.ValidationMessageFor(model => model.DataCadastro, "",
            new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CategoriaId, htmlAttributes:
        new { @class = "control-label col-md-3" })
