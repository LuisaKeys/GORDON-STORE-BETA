@model GORDON_STORE_BETA.Models.Estudio

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Alterando os dados de um Estudio";}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <main>
        <div class="tabelainteira">
            <div class="headertabela">
                ALTERAÇÃO DOS DADOS DE UM ESTUDIO
            </div>
            <div class="panel-body">
                <div class="form-horizontal">
                    <h4>Estudio</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.EstudioId)
                    <div class="form-group">
                        @Html.LabelFor(model => model.Nome, htmlAttributes:
                        new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Nome, new
                            {
                                htmlAttributes =
                            new { @class = "form-control" }
                            })
                            @Html.ValidationMessageFor(model => model.Nome, "", new
                            {
                                @class =
                            "text-danger"
                            })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Gravar alterações" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
}
@section ScriptPage {
    <script type="text/javascript">
        $(document).ready(function () {
            $('li').removeClass("active");
            $('#liProdutos').addClass("active");
        });
    </script>
}