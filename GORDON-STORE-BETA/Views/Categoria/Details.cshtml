@model GORDON_STORE_BETA.Models.Categoria

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Visualizando detalhes de uma Categoria";
}

<main>
    <div class="tabelainteira">
        <div class="headertabela">
            Visualizando detalhes de uma CATEGORIA
        </div>
        <div class="panel-body">
            <div class="form-group">
                @Html.LabelFor(model => model.Nome)<br />
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="glyphicon glyphicon-user"></i>
                    </span>
                    @Html.EditorFor(model => model.CategoriaId, new
                    {
                        htmlAttributes =
                    new { @class = "form-control", disabled = "disabled" }
                    })
                </div>
            </div>
        </div>

        <div class="panel-footer panel-info">
            @Html.ActionLink("Alterar", "Edit", new { id = Model.CategoriaId },
            new { @class = "btn btn-retornar" })
            @Html.ActionLink("Retornar para a listagem", "Index", null,
            new { @class = "btn btn-retornar" })
        </div>
    </div>
</main>
@section ScriptPage {
    <script type="text/javascript">
        $(document).ready(function () {
            $('li').removeClass("active");
            $('#liProdutos').addClass("active");
        });
    </script>
}
