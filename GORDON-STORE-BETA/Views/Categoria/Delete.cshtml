@model GORDON_STORE_BETA.Models.Categoria

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Visualizando detalhes de uma categoria";
}

<main>
<div class="tabelainteira">
    <div class="headertabela">
        DADOS DA CATEGORIA A SER REMOVIDA
    </div>
    <div class="panel-body">
        <div class="form-group">
            @Html.LabelFor(model => model.Nome)<br />
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="glyphicon glyphicon-user">
                    </i>
                </span>
                @Html.EditorFor(model => model.Nome, new
                {
                    htmlAttributes =
                new { @class = "form-control", disabled = "disabled" }
                })
            </div>
        </div>
    </div>
    <div class="panel-footer">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <input type="submit" value="Remover Categoria" class="btn" />
            @Html.ActionLink("Retornar para a listagem", "Index", null,
            new { @class = "btn btn-retornar" })
        }
    </div>
</div>
</main>

@section ScriptPage {
    <script type="text/javascript">
        $(document).ready(function () {
            $('li').removeClass("active");
            $('#liProdutos').addClass("active");
        });
    </script>
}